/* app.wxss - 赛博宠物全局样式 */

/* 赛博朋克配色变量 */
page {
  --color-primary: #22d3ee;
  --color-primary-light: #06b6d4;
  --color-primary-dark: #0891b2;
  --color-background: #0f1629;
  --color-accent: #ec4899;
  --color-accent-light: rgba(236, 72, 153, 0.15);
  --color-text: #ffffff;
  --color-text-light: #d1d5db;
  --color-text-lighter: #9ca3af;
  --color-white: #ffffff;
  --color-border: rgba(34, 211, 238, 0.2);
  --color-error: #f87171;
  --color-success: #34d399;
  --color-card: rgba(31, 41, 55, 0.5);
  --color-card-border: rgba(168, 85, 247, 0.3);
  --color-glow-cyan: rgba(34, 211, 238, 0.4);
  --color-glow-pink: rgba(236, 72, 153, 0.4);
  --color-purple-bg: rgba(61, 26, 95, 0.5);

  background: linear-gradient(135deg, #6d1b1b 0%, #3d1a5f 25%, #1a2555 75%, #0a2f4f 100%);
  background-attachment: fixed;
  color: var(--color-text);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  min-height: 100vh;
}

/* 通用容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片样式 - 赛博风 */
.card {
  background: linear-gradient(180deg, rgba(31, 41, 55, 0.5), rgba(61, 26, 95, 0.5));
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid var(--color-card-border);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(-2rpx);
  border-color: var(--color-primary);
}

/* 霓虹卡片 */
.card-neon {
  border-color: var(--color-primary);
  box-shadow: 0 0 20rpx var(--color-glow-cyan), inset 0 0 20rpx rgba(34, 211, 238, 0.05);
}

/* 按钮样式 - 霓虹渐变 */
.btn-primary {
  background: linear-gradient(135deg, #06b6d4, #ec4899);
  color: var(--color-white);
  border: 2rpx solid var(--color-primary);
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 20rpx var(--color-glow-cyan);
  transition: all 0.3s ease;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
  box-shadow: 0 0 30rpx var(--color-glow-cyan);
}

.btn-secondary {
  background-color: transparent;
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  border-radius: 50rpx;
  padding: 22rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  box-shadow: 0 0 10rpx rgba(34, 211, 238, 0.15);
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background-color: rgba(34, 211, 238, 0.1);
  box-shadow: 0 0 20rpx rgba(34, 211, 238, 0.3);
}

/* 表单样式 - 深色输入框 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--color-text);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: rgba(34, 211, 238, 0.05);
  border: 2rpx solid var(--color-border);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--color-text);
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--color-primary);
  box-shadow: 0 0 10rpx var(--color-glow-cyan);
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background-color: rgba(34, 211, 238, 0.05);
  border: 2rpx solid var(--color-border);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: var(--color-text);
  box-sizing: border-box;
}

/* 标签样式 - 霓虹标签 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 24rpx;
  background-color: rgba(34, 211, 238, 0.1);
  color: var(--color-primary);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.tag-active {
  background-color: var(--color-primary);
  color: var(--color-white);
  border-color: var(--color-primary);
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: var(--color-border);
  margin: 30rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: var(--color-text-lighter);
  text-align: center;
}

/* 标题样式 - 赛博竖线 */
.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 36rpx;
  background: linear-gradient(to bottom, var(--color-primary), var(--color-accent));
  border-radius: 4rpx;
  margin-right: 16rpx;
  box-shadow: 0 0 8rpx var(--color-glow-cyan);
}

/* 底部安全区 */
.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* flex 布局 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-20 { margin-right: 20rpx; }

/* 霓虹发光效果 */
.glow-cyan {
  box-shadow: 0 0 20rpx var(--color-glow-cyan), inset 0 0 20rpx rgba(34, 211, 238, 0.1);
}

.glow-pink {
  box-shadow: 0 0 20rpx var(--color-glow-pink), inset 0 0 20rpx rgba(236, 72, 153, 0.1);
}

/* 脉冲呼吸动画 */
.pulse-glow {
  animation: pulse-glow 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse-glow {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}
