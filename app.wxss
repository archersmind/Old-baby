/* app.wxss - 宠物健康管理全局样式 */

/* 温馨简约配色变量 */
page {
  --color-primary: #FF7A00;
  --color-primary-light: #FF9A3D;
  --color-primary-dark: #E56B00;
  --color-background: #FFFFFF;
  --color-accent: #E91E8C;
  --color-accent-light: rgba(233, 30, 140, 0.1);
  --color-text: #333333;
  --color-text-light: #666666;
  --color-text-lighter: #999999;
  --color-white: #ffffff;
  --color-border: #F0F0F0;
  --color-error: #FF4D4F;
  --color-success: #52C41A;
  --color-warning: #FF7A00;
  --color-card: #FFFFFF;
  --color-card-border: #F5F5F5;
  --color-input-bg: #F3F3F5;
  --color-gradient-start: #FF7A00;
  --color-gradient-end: #E91E8C;

  background: var(--color-background);
  background-attachment: fixed;
  color: var(--color-text);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  min-height: 100vh;
}

/* 通用容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片样式 - 温馨简约风 */
.card {
  background: var(--color-card);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border: none;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

/* 强调卡片 */
.card-highlight {
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  color: var(--color-white);
}

/* 按钮样式 - 温馨渐变 */
.btn-primary {
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  color: var(--color-white);
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 0, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(255, 122, 0, 0.4);
}

.btn-secondary {
  background-color: var(--color-input-bg);
  color: var(--color-text);
  border: none;
  border-radius: 50rpx;
  padding: 22rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  box-shadow: none;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background-color: #E8E8EA;
}

/* 表单样式 - 浅色输入框 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--color-text);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: var(--color-input-bg);
  border: none;
  border-radius: 28rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--color-text);
  box-sizing: border-box;
}

.form-input:focus {
  background-color: #EAEAEC;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background-color: var(--color-input-bg);
  border: none;
  border-radius: 28rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: var(--color-text);
  box-sizing: border-box;
}

/* 标签样式 - 简约标签 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 24rpx;
  background-color: var(--color-input-bg);
  color: var(--color-text-light);
  border: none;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.tag-active {
  background: linear-gradient(135deg, var(--color-accent), #FF6B9D);
  color: var(--color-white);
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: var(--color-border);
  margin: 30rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: var(--color-text-lighter);
  text-align: center;
}

/* 标题样式 - 简约风格 */
.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 36rpx;
  background: linear-gradient(to bottom, var(--color-primary), var(--color-accent));
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 底部安全区 */
.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* flex 布局 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-20 { margin-right: 20rpx; }

/* 注册进度条 */
.enroll-steps {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0 60rpx;
  position: relative;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
}

.step-num {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background-color: var(--color-background);
  border: 2rpx solid var(--color-text-lighter);
  color: var(--color-text-lighter);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.step-text {
  font-size: 22rpx;
  color: var(--color-text-lighter);
  font-weight: 500;
}

.step-line {
  width: 120rpx;
  height: 4rpx;
  background-color: var(--color-border);
  margin: -34rpx 20rpx 0;
  z-index: 1;
}

.step-item.active .step-num {
  border-color: var(--color-primary);
  background-color: var(--color-primary);
  color: var(--color-white);
}

.step-item.active .step-text {
  color: var(--color-primary);
}

.step-line.active {
  background-color: var(--color-primary);
}

/* 渐变背景 */
.gradient-bg {
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
}

/* 提示卡片 */
.tip-card {
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  color: var(--color-white);
  border-radius: 24rpx;
  padding: 30rpx;
}

.tip-card .tip-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.tip-card .tip-content {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.6;
}
