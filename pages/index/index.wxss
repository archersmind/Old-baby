/* pages/index/index.wxss */

.page-header {
  text-align: center;
  padding: 40rpx 0 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.header-subtitle {
  font-size: 26rpx;
  color: var(--color-text-lighter);
  margin-top: 8rpx;
}

/* 宠物列表 */
.pet-list {
  padding-bottom: 150rpx;
}

.pet-card {
  background-color: var(--color-white);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 124, 89, 0.08);
  display: flex;
  align-items: flex-start;
  position: relative;
}

.pet-avatar-wrap {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.pet-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background-color: var(--color-background);
}

.pet-avatar-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background-color: var(--color-background);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.pet-age-tag {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, var(--color-accent) 0%, #C4956A 100%);
  color: var(--color-white);
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.pet-info {
  flex: 1;
  min-width: 0;
}

.pet-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 6rpx;
}

.pet-breed {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-bottom: 4rpx;
}

.pet-weight {
  font-size: 24rpx;
  color: var(--color-text-lighter);
  margin-bottom: 12rpx;
}

.pet-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.health-tag {
  display: inline-block;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  background-color: rgba(224, 122, 95, 0.15);
  color: var(--color-error);
  border-radius: 20rpx;
}

.health-tag.healthy {
  background-color: rgba(129, 178, 154, 0.15);
  color: var(--color-success);
}

.health-tag.more {
  background-color: rgba(74, 124, 89, 0.1);
  color: var(--color-primary);
}

/* 操作按钮 */
.pet-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-left: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background-color: var(--color-background);
  border-radius: 16rpx;
}

.action-btn:active {
  background-color: rgba(74, 124, 89, 0.1);
}

.action-icon-emoji {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.action-btn text {
  font-size: 20rpx;
  color: var(--color-text-light);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.empty-icon-emoji {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 34rpx;
  color: var(--color-text);
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--color-text-lighter);
  text-align: center;
}

/* 添加按钮 */
.add-btn-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, var(--color-background) 60%, transparent);
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  color: var(--color-white);
  border: none;
  border-radius: 50rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.add-btn::after {
  border: none;
}

.add-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  font-weight: 300;
}
