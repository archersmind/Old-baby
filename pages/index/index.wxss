/* pages/index/index.wxss */

.page-header {
  text-align: center;
  padding: 40rpx 0 30rpx;
}

.header-title {
  font-size: 56rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #22d3ee, #ec4899);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 0 30rpx rgba(34, 211, 238, 0.3);
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(168, 85, 247, 0.8);
  letter-spacing: 6rpx;
  font-weight: 500;
}

/* 宠物列表 */
.pet-list {
  padding-bottom: 150rpx;
}

.pet-card {
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.5), rgba(61, 26, 95, 0.5));
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid var(--color-card-border);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: flex-start;
  position: relative;
  transition: all 0.3s ease;
}

.pet-card:active {
  transform: translateY(-4rpx);
  border-color: var(--color-primary);
  box-shadow: 0 0 30rpx rgba(34, 211, 238, 0.4);
}

.pet-avatar-wrap {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.pet-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  border: 2rpx solid var(--color-primary);
  box-shadow: 0 0 20rpx rgba(34, 211, 238, 0.4);
}

.pet-avatar-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(168, 85, 247, 0.4), rgba(34, 211, 238, 0.4));
  border: 2rpx solid var(--color-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  box-shadow: 0 0 20rpx rgba(34, 211, 238, 0.3);
}

.pet-age-tag {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #06b6d4, #ec4899);
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  box-shadow: 0 0 10rpx rgba(236, 72, 153, 0.5);
}

.pet-info {
  flex: 1;
  min-width: 0;
}

.pet-name {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 8rpx;
  text-shadow: 0 0 10rpx rgba(34, 211, 238, 0.3);
}

.pet-breed {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-bottom: 6rpx;
}

.pet-weight {
  font-size: 24rpx;
  color: var(--color-text-lighter);
  margin-bottom: 12rpx;
}

.pet-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.health-tag {
  display: inline-block;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  background-color: rgba(236, 72, 153, 0.2);
  color: var(--color-accent);
  border: 2rpx solid rgba(236, 72, 153, 0.5);
  border-radius: 20rpx;
}

.health-tag.healthy {
  background-color: rgba(52, 211, 153, 0.2);
  color: var(--color-success);
  border-color: rgba(52, 211, 153, 0.5);
}

.health-tag.more {
  background-color: rgba(34, 211, 238, 0.15);
  color: var(--color-primary);
  border-color: rgba(34, 211, 238, 0.4);
}

.health-tag.warning {
  background-color: rgba(236, 72, 153, 0.1);
  color: #ff9800;
  border-color: rgba(255, 152, 0, 0.4);
  font-style: italic;
}

/* 操作按钮 */
.pet-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-left: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: rgba(34, 211, 238, 0.1);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: rgba(34, 211, 238, 0.3);
  border-color: var(--color-primary);
  transform: scale(0.95);
  box-shadow: 0 0 15rpx rgba(34, 211, 238, 0.4);
}

.action-icon-emoji {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.action-btn text {
  font-size: 20rpx;
  color: var(--color-text-light);
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.empty-icon-emoji {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
  filter: drop-shadow(0 0 20rpx rgba(34, 211, 238, 0.3));
}

.empty-text {
  font-size: 36rpx;
  color: var(--color-text);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--color-text-lighter);
  text-align: center;
  line-height: 1.8;
}

/* 添加按钮 */
.add-btn-wrap {
  position: fixed;
  bottom: calc(100rpx + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: linear-gradient(to top, rgba(10, 47, 79, 0.98) 20%, transparent);
  backdrop-filter: blur(8rpx);
  z-index: 99;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #06b6d4, #ec4899);
  color: #fff;
  border: 2rpx solid var(--color-primary);
  border-radius: 50rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 0 30rpx rgba(34, 211, 238, 0.5);
  transition: all 0.3s ease;
}

.add-btn::after {
  border: none;
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 0 40rpx rgba(34, 211, 238, 0.6);
}

.add-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  font-weight: 300;
}
