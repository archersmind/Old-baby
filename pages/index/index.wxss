/* pages/index/index.wxss */

.page-header {
  text-align: center;
  padding: 40rpx 0 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: var(--color-text-lighter);
  letter-spacing: 2rpx;
  font-weight: 400;
}

/* 宠物列表 */
.pet-list {
  padding-bottom: 150rpx;
}

.pet-card {
  background: var(--color-card);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border: none;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
  position: relative;
  transition: all 0.3s ease;
}

.pet-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.pet-avatar-wrap {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.pet-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.pet-avatar-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.pet-age-tag {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.pet-info {
  flex: 1;
  min-width: 0;
}

.pet-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.pet-breed {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-bottom: 6rpx;
}

.pet-weight {
  font-size: 24rpx;
  color: var(--color-text-lighter);
  margin-bottom: 12rpx;
}

.pet-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.health-tag {
  display: inline-block;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  background-color: rgba(233, 30, 140, 0.1);
  color: var(--color-accent);
  border: none;
  border-radius: 20rpx;
}

.health-tag.healthy {
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--color-success);
}

.health-tag.more {
  background-color: var(--color-input-bg);
  color: var(--color-text-light);
}

.health-tag.warning {
  background-color: rgba(255, 122, 0, 0.1);
  color: var(--color-warning);
  font-style: normal;
}

/* 操作按钮 */
.pet-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-left: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: var(--color-input-bg);
  border: none;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #E8E8EA;
  transform: scale(0.95);
}

.action-icon-emoji {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.action-btn text {
  font-size: 20rpx;
  color: var(--color-text-light);
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.empty-icon-emoji {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 36rpx;
  color: var(--color-text);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--color-text-lighter);
  text-align: center;
  line-height: 1.8;
}

/* 添加按钮 */
.add-btn-wrap {
  position: fixed;
  bottom: calc(100rpx + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: linear-gradient(to top, rgba(255, 255, 255, 0.98) 60%, transparent);
  z-index: 99;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  color: #fff;
  border: none;
  border-radius: 50rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(255, 122, 0, 0.4);
  transition: all 0.3s ease;
}

.add-btn::after {
  border: none;
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 24rpx rgba(255, 122, 0, 0.5);
}

.add-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  font-weight: 300;
}
