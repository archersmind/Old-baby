/* pages/index/index.wxss */

.container {
  padding-bottom: 30rpx;
}

/* 顶部标题 */
.page-header {
  background: #fff;
  padding: 96rpx 32rpx 48rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.header-title {
  font-size: 48rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

/* 宠物列表 */
.pet-list {
  padding: 24rpx 32rpx;
}

.pet-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  transition: transform 0.2s;
}

.pet-card:active {
  transform: scale(0.98);
}

.pet-avatar-wrap {
  flex-shrink: 0;
}

.pet-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
}

.pet-avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 70rpx;
}

.pet-info {
  flex: 1;
  margin-left: 32rpx;
  min-width: 0;
}

.pet-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4rpx;
}

.pet-name {
  font-size: 36rpx;
  color: #1f2937;
  font-weight: 500;
}

.pet-chevron {
  font-size: 32rpx;
  color: #9ca3af;
  font-weight: 300;
}

.pet-breed-age {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.pet-status-row {
  display: flex;
  align-items: center;
  gap: 32rpx;
  font-size: 24rpx;
}

.pet-health-status {
  display: flex;
  align-items: center;
}

.status-icon {
  font-size: 32rpx;
  color: #f97316;
  margin-right: 8rpx;
}

.status-text-good {
  color: #16a34a;
}

.status-text-warning {
  color: #ea580c;
}

.pet-checkup {
  display: flex;
  align-items: center;
  color: #9ca3af;
}

.checkup-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.checkup-text {
  font-size: 24rpx;
}

.pet-checkup-hint {
  display: flex;
  align-items: center;
  color: #f97316;
}

.hint-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.hint-text {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.empty-icon-emoji {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 36rpx;
  color: #1f2937;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.8;
}

/* 添加按钮 */
.add-btn-wrap {
  padding: 0 32rpx 32rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f97316;
  color: #fff;
  border: none;
  border-radius: 32rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: background 0.2s;
}

.add-btn::after {
  border: none;
}

.add-btn:active {
  background: #ea580c;
}

.add-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  font-weight: 300;
}

/* 健康管理小贴士 */
.health-tip-card {
  margin: 0 32rpx 48rpx;
  padding: 48rpx;
  background: linear-gradient(135deg, #fb923c, #ec4899);
  border-radius: 32rpx;
  color: #fff;
}

.health-tip-card .tip-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.health-tip-card .tip-content {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.6;
}

/* 底部占位 */
.bottom-spacer {
  height: 120rpx;
}

/* ===== 欢迎弹窗 ===== */
.welcome-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 32rpx;
}

.welcome-card {
  background: #fff;
  border-radius: 48rpx;
  padding: 48rpx;
  width: 100%;
  max-width: 640rpx;
  animation: slideUp 0.3s ease;
  box-sizing: border-box;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.welcome-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 500;
  color: #1f2937;
}

.welcome-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
  font-size: 32rpx;
}

.welcome-hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.welcome-paw {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.welcome-slogan {
  font-size: 28rpx;
  color: #4b5563;
}

/* 引导步骤 */
.welcome-steps {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 24rpx;
  margin-bottom: 48rpx;
  width: 100%;
}

.welcome-step {
  display: flex;
  align-items: flex-start;
  width: 100%;
}

.step-circle {
  width: 56rpx;
  height: 56rpx;
  min-width: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.step-circle.orange {
  background: #fff7ed;
  color: #f97316;
}

.step-circle.pink {
  background: #fdf2f8;
  color: #ec4899;
}

.step-circle.blue {
  background: #eff6ff;
  color: #3b82f6;
}

.step-info {
  flex: 1;
  min-width: 0;
  padding-top: 4rpx;
}

.step-title {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.step-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  word-break: break-word;
}

/* 开始使用按钮 */
.welcome-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: linear-gradient(135deg, #f97316, #ec4899);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 0;
  margin: 0;
}

.welcome-btn::after {
  border: none;
}

.welcome-btn:active {
  opacity: 0.9;
}

/* ===== 今日提醒 ===== */
.reminder-section {
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.reminder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.reminder-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
}

.reminder-more {
  font-size: 26rpx;
  color: #f97316;
}

.reminder-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reminder-card {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  background: #fef3c7;
}

.reminder-card.feeding {
  background: #fff7ed;
}

.reminder-card.medication {
  background: #fef3c7;
}

.reminder-card.checkup {
  background: #dbeafe;
}

.reminder-card-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.reminder-card-info {
  flex: 1;
  min-width: 0;
}

.reminder-card-title {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.reminder-card-detail {
  font-size: 24rpx;
  color: #6b7280;
}

.reminder-card-done {
  font-size: 26rpx;
  color: #16a34a;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  flex-shrink: 0;
}
