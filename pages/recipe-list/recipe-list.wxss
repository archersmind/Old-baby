/* pages/recipe-list/recipe-list.wxss */

.container {
  padding-bottom: 30rpx;
}

/* 顶部标题 */
.page-header {
  background: #fff;
  padding: 96rpx 32rpx 48rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.header-title {
  font-size: 48rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

/* 分类导航 */
.category-bar {
  background: #fff;
  padding: 24rpx 32rpx;
}

.category-scroll {
  white-space: nowrap;
  display: flex;
}

.category-pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 14rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 1;
  color: #4b5563;
  background: #f3f4f6;
  margin-right: 16rpx;
  font-weight: 400;
  transition: all 0.2s;
  flex-shrink: 0;
  box-sizing: border-box;
}

.category-pill.active {
  background: #ec4899;
  color: #fff;
}

/* 筛选提示 */
.filter-tip {
  margin: 32rpx 32rpx 0;
  padding: 32rpx;
  background: #fdf2f8;
  border-radius: 24rpx;
  display: flex;
  align-items: flex-start;
}

.filter-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.filter-tip-content {
  flex: 1;
}

.filter-tip-title {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.filter-tip-desc {
  font-size: 24rpx;
  color: #4b5563;
}

/* 食谱列表 */
.recipe-list {
  padding: 32rpx;
}

.recipe-card {
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  margin-bottom: 32rpx;
  transition: transform 0.2s;
}

.recipe-card:active {
  transform: scale(0.98);
}

/* 食谱图片 - 全宽 aspect-video */
.recipe-image-wrap {
  width: 100%;
  height: 0;
  padding-bottom: 56.25%; /* 16:9 ratio */
  position: relative;
  background: #f3f4f6;
  overflow: hidden;
}

.recipe-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.recipe-image-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  background: linear-gradient(135deg, #ec4899, #f97316);
}

/* 食谱信息 */
.recipe-body {
  padding: 32rpx;
}

.recipe-title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.recipe-name {
  font-size: 36rpx;
  color: #1f2937;
  font-weight: 500;
  flex: 1;
}

.recipe-arrow {
  font-size: 32rpx;
  color: #9ca3af;
  margin-left: 16rpx;
  flex-shrink: 0;
  font-weight: 300;
}

.recipe-desc {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.recipe-meta {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  margin-right: 8rpx;
}

.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.recipe-tag {
  padding: 8rpx 24rpx;
  background: #fdf2f8;
  color: #db2777;
  font-size: 24rpx;
  border-radius: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #9ca3af;
  margin-bottom: 30rpx;
}

.clear-btn {
  background: #f3f4f6;
  color: #4b5563;
  border: none;
  border-radius: 24rpx;
  font-size: 28rpx;
  height: 80rpx;
}

.clear-btn::after {
  border: none;
}

/* 底部占位 */
.bottom-spacer {
  height: 120rpx;
}
