/* pages/recipe-list/recipe-list.wxss */

.container {
  padding-bottom: 30rpx;
}

/* 宠物横幅 */
.pet-banner {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(233, 30, 140, 0.08), rgba(255, 122, 0, 0.08));
  border: none;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.pet-banner:active {
  background: linear-gradient(135deg, rgba(233, 30, 140, 0.12), rgba(255, 122, 0, 0.12));
}

.pet-banner.empty {
  justify-content: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: var(--color-text-light);
}

.pet-mini-avatar-wrap {
  margin-right: 16rpx;
}

.pet-mini-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.pet-mini-avatar-placeholder {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.pet-banner-info {
  flex: 1;
}

.pet-banner-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text);
}

.pet-banner-hint {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-left: 8rpx;
}

.change-pet {
  font-size: 26rpx;
  color: var(--color-accent);
  font-weight: 500;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: var(--color-input-bg);
  border: none;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--color-text);
}

.filter-btn {
  padding: 16rpx 28rpx;
  background: var(--color-input-bg);
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
  transition: all 0.3s ease;
}

.filter-btn:active {
  background: #E8E8EA;
}

.filter-btn.active {
  background: linear-gradient(135deg, var(--color-accent), #FF6B9D);
  color: #fff;
  border: none;
}

/* 当前筛选 */
.active-filter {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: var(--color-text-light);
}

.filter-tag {
  display: inline-flex;
  align-items: center;
  background-color: rgba(233, 30, 140, 0.1);
  color: var(--color-accent);
  border: none;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 12rpx;
  font-weight: 500;
}

.tag-close {
  margin-left: 8rpx;
  font-size: 22rpx;
  font-weight: 700;
}

/* 食谱列表 */
.recipe-list {
  padding-bottom: 20rpx;
}

.recipe-card {
  display: flex;
  align-items: center;
  background: var(--color-card);
  border: none;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.recipe-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.recipe-image-wrap {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.recipe-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  border: none;
}

.recipe-image-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.recipe-info {
  flex: 1;
  margin-left: 20rpx;
  min-width: 0;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-desc {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.meta-item {
  font-size: 24rpx;
  color: var(--color-text-lighter);
}

.match-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.match-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--color-success);
  border: none;
  border-radius: 16rpx;
  font-weight: 500;
}

.recipe-arrow {
  font-size: 36rpx;
  color: var(--color-text-lighter);
  margin-left: 10rpx;
  font-weight: 300;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  font-size: 30rpx;
  color: var(--color-text-lighter);
  margin-bottom: 30rpx;
}

/* 筛选弹窗 */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-mask.show {
  opacity: 1;
  visibility: visible;
}

.filter-panel {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 70%;
  background: var(--color-background);
  border-left: none;
  box-shadow: -10rpx 0 40rpx rgba(0, 0, 0, 0.15);
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
}

.filter-mask.show .filter-panel {
  transform: translateX(0);
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--color-border);
}

.filter-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-text);
}

.filter-close {
  font-size: 40rpx;
  color: var(--color-text-lighter);
  padding: 10rpx;
  line-height: 1;
}

.filter-content {
  flex: 1;
  padding: 20rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 16rpx;
  border-bottom: 2rpx solid var(--color-border);
  font-size: 30rpx;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.filter-item:active {
  background-color: var(--color-input-bg);
}

.filter-item.active {
  color: var(--color-accent);
  font-weight: 600;
  background-color: rgba(233, 30, 140, 0.05);
}

.filter-check {
  color: var(--color-accent);
  font-size: 32rpx;
  font-weight: 700;
}

.filter-footer {
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid var(--color-border);
}
