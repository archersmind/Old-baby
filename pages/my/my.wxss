/* pages/my/my.wxss */

.container {
  padding-bottom: 50rpx;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  padding: 60rpx 30rpx 80rpx;
  text-align: center;
  color: var(--color-white);
}

.user-header-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.user-header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: var(--color-card);
  margin: -40rpx 30rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  border-right: 2rpx solid var(--color-border);
}

.stat-item:last-child {
  border-right: none;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--color-text-lighter);
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.avatar-btn {
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  line-height: 1;
}

.avatar-btn::after {
  border: none;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.user-avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.user-info {
  margin-left: 24rpx;
  flex: 1;
}

.nickname-input {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.nickname-input::placeholder {
  color: var(--color-text-lighter);
  font-weight: normal;
}

.user-stat {
  font-size: 26rpx;
  color: var(--color-text-light);
}

.stat-num {
  color: var(--color-accent);
  font-weight: 700;
}

/* 菜单区域 */
.menu-section {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 2rpx solid var(--color-border);
  transition: all 0.3s ease;
}

.menu-item:active {
  background-color: var(--color-input-bg);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item.share-item {
  background: transparent;
  border: none;
  border-bottom: 2rpx solid var(--color-border);
  border-radius: 0;
  margin: 0;
  padding: 32rpx 30rpx;
  text-align: left;
  line-height: 1.6;
  width: 100% !important;
  display: flex;
  align-items: center;
}

.menu-item.share-item::after {
  border: none;
}

.menu-item.share-item:active {
  background-color: var(--color-input-bg);
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--color-text);
  font-weight: 500;
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--color-text-lighter);
  font-weight: 300;
}

.menu-item.danger .menu-text {
  color: var(--color-error);
  font-weight: 600;
}

.menu-item.danger .menu-icon {
  opacity: 0.8;
}

/* 隐私说明 */
.privacy-note {
  background: rgba(82, 196, 26, 0.08);
  margin: 0 30rpx 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: flex-start;
}

.privacy-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.privacy-content {
  flex: 1;
}

.privacy-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 6rpx;
}

.privacy-desc {
  font-size: 24rpx;
  color: var(--color-text-lighter);
  line-height: 1.5;
}

/* 底部说明 */
.footer {
  text-align: center;
  padding: 60rpx 30rpx;
}

.footer-text {
  font-size: 24rpx;
  color: var(--color-text-lighter);
  margin-bottom: 8rpx;
}
