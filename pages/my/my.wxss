/* pages/my/my.wxss */

.container {
  padding-bottom: 50rpx;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.avatar-btn {
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  line-height: 1;
}

.avatar-btn::after {
  border: none;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid var(--color-primary);
  box-shadow: 0 0 25rpx rgba(34, 211, 238, 0.5);
}

.user-avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(168, 85, 247, 0.4), rgba(34, 211, 238, 0.4));
  border: 2rpx solid var(--color-primary);
  box-shadow: 0 0 25rpx rgba(34, 211, 238, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.user-info {
  margin-left: 24rpx;
  flex: 1;
}

.nickname-input {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 8rpx;
  text-shadow: 0 0 10rpx rgba(34, 211, 238, 0.3);
}

.nickname-input::placeholder {
  color: var(--color-text-lighter);
  font-weight: normal;
}

.user-stat {
  font-size: 26rpx;
  color: var(--color-text-light);
}

.stat-num {
  color: var(--color-accent);
  font-weight: 700;
  text-shadow: 0 0 8rpx rgba(236, 72, 153, 0.3);
}

/* 菜单区域 */
.menu-section {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 2rpx solid rgba(34, 211, 238, 0.1);
  transition: all 0.3s ease;
}

.menu-item:active {
  background-color: rgba(34, 211, 238, 0.1);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item.share-item {
  background: transparent;
  border: none;
  border-bottom: 2rpx solid rgba(34, 211, 238, 0.1);
  border-radius: 0;
  margin: 0;
  padding: 32rpx 30rpx;
  text-align: left;
  line-height: 1.6;
  width: 100% !important;
  display: flex;
  align-items: center;
}

.menu-item.share-item::after {
  border: none;
}

.menu-item.share-item:active {
  background-color: rgba(34, 211, 238, 0.1);
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--color-text);
  font-weight: 500;
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--color-primary);
  font-weight: 300;
}

.menu-item.danger .menu-text {
  color: var(--color-error);
  font-weight: 600;
}

.menu-item.danger .menu-icon {
  filter: drop-shadow(0 0 8rpx rgba(239, 68, 68, 0.3));
}

/* 底部说明 */
.footer {
  text-align: center;
  padding: 60rpx 30rpx;
}

.footer-text {
  font-size: 24rpx;
  color: var(--color-text-lighter);
  margin-bottom: 8rpx;
}
