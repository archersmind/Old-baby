/* pages/recipe-detail/recipe-detail.wxss */

.container {
  padding: 0;
  padding-bottom: 150rpx;
}

/* 头部图片 */
.header-image-wrap {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.header-image {
  width: 100%;
  height: 100%;
}

.header-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 120rpx;
  background: linear-gradient(135deg, rgba(168, 85, 247, 0.5), rgba(34, 211, 238, 0.5));
}

.header-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.85), transparent);
  backdrop-filter: blur(4rpx);
}

.recipe-title {
  font-size: 42rpx;
  font-weight: 700;
  color: var(--color-primary);
  text-shadow: 0 0 20rpx rgba(34, 211, 238, 0.6);
  margin-bottom: 8rpx;
}

.recipe-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* 信息卡片 */
.info-cards {
  display: flex;
  margin: -40rpx 30rpx 20rpx;
  position: relative;
  z-index: 10;
}

.info-card {
  flex: 1;
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.8), rgba(61, 26, 95, 0.6));
  border: 2rpx solid var(--color-primary);
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
  margin: 0 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.4), 0 0 15rpx rgba(34, 211, 238, 0.2);
}

.info-value {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 4rpx;
  text-shadow: 0 0 8rpx rgba(34, 211, 238, 0.3);
}

.info-label {
  font-size: 22rpx;
  color: var(--color-text-light);
}

/* 适用说明 */
.suitable-section {
  margin: 0 30rpx 20rpx;
}

.suitable-title {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-bottom: 12rpx;
  font-weight: 600;
}

.suitable-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suitable-tag {
  padding: 8rpx 20rpx;
  background-color: rgba(52, 211, 153, 0.2);
  color: var(--color-success);
  border: 2rpx solid rgba(52, 211, 153, 0.5);
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
}

/* 标签页 */
.tabs {
  display: flex;
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.5), rgba(61, 26, 95, 0.5));
  border: 2rpx solid var(--color-card-border);
  margin: 0 30rpx;
  border-radius: 16rpx;
  padding: 8rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--color-text-light);
  border-radius: 12rpx;
  transition: all 0.3s ease;
  font-weight: 500;
}

.tab.active {
  background: linear-gradient(135deg, #06b6d4, #ec4899);
  color: #fff;
  font-weight: 700;
  box-shadow: 0 0 15rpx rgba(34, 211, 238, 0.4);
}

/* 标签内容 */
.tab-content {
  margin: 20rpx 30rpx;
}

/* 食材清单 */
.ingredient-list {
  margin-bottom: 20rpx;
}

.ingredient-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(34, 211, 238, 0.1);
}

.ingredient-item:last-child {
  border-bottom: none;
}

.ingredient-name {
  font-size: 30rpx;
  color: var(--color-text);
  font-weight: 500;
}

.ingredient-right {
  text-align: right;
}

.ingredient-amount {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: 700;
}

.ingredient-note {
  display: block;
  font-size: 24rpx;
  color: var(--color-text-lighter);
  margin-top: 4rpx;
}

.servings-note {
  font-size: 26rpx;
  color: var(--color-text-lighter);
  padding-top: 16rpx;
  border-top: 2rpx dashed rgba(34, 211, 238, 0.2);
}

.servings-hint, .weight-hint {
  font-size: 22rpx;
  margin-top: 8rpx;
  color: var(--color-text-lighter);
  font-style: italic;
}

.weight-hint {
  color: var(--color-primary);
  font-weight: 500;
  font-style: normal;
}

.original-amount {
  font-size: 22rpx;
  color: var(--color-text-lighter);
  font-weight: normal;
  margin-left: 8rpx;
}

/* 制作步骤 */
.step-list {
  padding: 0;
}

.step-item {
  display: flex;
  margin-bottom: 24rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #06b6d4, #ec4899);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 700;
  flex-shrink: 0;
  margin-right: 16rpx;
  margin-top: 4rpx;
  box-shadow: 0 0 15rpx rgba(34, 211, 238, 0.4);
}

.step-content {
  flex: 1;
  font-size: 30rpx;
  color: var(--color-text);
  line-height: 1.8;
}

/* 营养说明 */
.nutrition-grid {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.nutrition-item {
  flex: 1;
  background: linear-gradient(135deg, rgba(34, 211, 238, 0.1), rgba(34, 211, 238, 0.05));
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}

.nutrition-label {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-bottom: 8rpx;
  font-weight: 600;
}

.nutrition-value {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 700;
}

.nutrition-special {
  background: linear-gradient(135deg, rgba(34, 211, 238, 0.08), rgba(61, 26, 95, 0.1));
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 12rpx;
  padding: 20rpx;
}

.special-title {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 700;
  margin-bottom: 8rpx;
  text-shadow: 0 0 8rpx rgba(34, 211, 238, 0.2);
}

.special-content {
  font-size: 28rpx;
  color: var(--color-text);
  line-height: 1.6;
}

/* 小贴士 */
.tips-section, .warnings-section {
  margin: 0 30rpx 20rpx;
}

.tips-title, .warnings-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  border-left: none;
  padding-left: 0;
  font-weight: 700;
  font-size: 30rpx;
}

.tips-icon, .warnings-icon {
  margin-right: 8rpx;
}

.tips-list, .warnings-list {
  padding-left: 8rpx;
}

.tip-item, .warning-item {
  position: relative;
  padding-left: 20rpx;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.tip-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: var(--color-primary);
  font-weight: 700;
}

.tip-item {
  color: var(--color-text);
}

.warning-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: var(--color-error);
  font-weight: 700;
}

.warning-item {
  color: var(--color-error);
  font-weight: 500;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background: linear-gradient(to top, rgba(10, 47, 79, 0.98), rgba(10, 47, 79, 0.9));
  border-top: 2rpx solid rgba(34, 211, 238, 0.3);
  backdrop-filter: blur(16px);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: rgba(31, 41, 55, 0.6);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text);
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
  border-color: var(--color-primary);
  box-shadow: 0 0 20rpx rgba(34, 211, 238, 0.3);
}

.action-btn.share-btn {
  background: linear-gradient(135deg, #06b6d4, #ec4899);
  color: #fff;
  border-color: var(--color-primary);
  box-shadow: 0 0 20rpx rgba(34, 211, 238, 0.4);
}

.action-btn.share-btn:active {
  box-shadow: 0 0 30rpx rgba(34, 211, 238, 0.6);
}

.btn-icon {
  margin-right: 8rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: var(--color-text-light);
  font-size: 30rpx;
}
