/* pages/recipe-detail/recipe-detail.wxss */

.container {
  padding: 0;
  padding-bottom: 150rpx;
  background: #f9fafb;
}

/* 头部图片 */
.header-image-wrap {
  width: 100%;
  height: 0;
  padding-bottom: 56.25%;
  position: relative;
  background: #f3f4f6;
  overflow: hidden;
}

.header-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.header-image-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 120rpx;
  background: linear-gradient(135deg, #ec4899, #f97316);
}

/* 基本信息 */
.info-section {
  background: #fff;
  padding: 40rpx 32rpx;
}

.recipe-title {
  font-size: 48rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.recipe-desc {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.recipe-meta-row {
  display: flex;
  align-items: center;
  gap: 48rpx;
  font-size: 28rpx;
  color: #4b5563;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  margin-right: 12rpx;
}

/* 内容区块 */
.detail-section {
  background: #fff;
  margin-top: 24rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  color: #1f2937;
  font-weight: 500;
  margin-bottom: 32rpx;
}

.section-title.warning {
  color: #ef4444;
}

.section-title-with-icon {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.section-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

/* 标签 */
.tag-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-green {
  padding: 8rpx 24rpx;
  background: #f0fdf4;
  color: #16a34a;
  font-size: 24rpx;
  border-radius: 40rpx;
}

.tag-red {
  padding: 8rpx 24rpx;
  background: #fef2f2;
  color: #dc2626;
  font-size: 24rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
}

.tag-warn-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

/* 食材清单 */
.ingredient-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ingredient-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.ingredient-name {
  font-size: 28rpx;
  color: #374151;
}

.ingredient-right {
  text-align: right;
}

.ingredient-amount {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

.ingredient-note {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.servings-note {
  font-size: 24rpx;
  color: #f97316;
  margin-top: 20rpx;
  font-weight: 500;
}

/* 制作步骤 */
.step-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
}

.step-number {
  width: 48rpx;
  min-width: 48rpx;
  height: 48rpx;
  background: #f97316;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.step-text {
  flex: 1;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.7;
}

/* 营养信息 2x2 */
.nutrition-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.nutrition-item {
  width: calc(50% - 12rpx);
  padding: 24rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.nutrition-item.blue { background: #eff6ff; }
.nutrition-item.green { background: #f0fdf4; }
.nutrition-item.orange { background: #fff7ed; }
.nutrition-item.purple { background: #faf5ff; }

.nutrition-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.nutrition-value {
  font-size: 32rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 温馨提示 */
.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
}

.tip-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ec4899;
  margin-top: 16rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.tip-dot.warning {
  background: #ef4444;
}

.tip-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  flex: 1;
}

.tip-text.warning {
  color: #ef4444;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-top: 2rpx solid #f3f4f6;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border: none;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.action-btn::after {
  border: none;
}

.collect-btn {
  background: #f3f4f6;
  color: #374151;
}

.collect-btn.collected {
  background: #fef2f2;
  color: #ef4444;
}

.share-btn {
  background: linear-gradient(135deg, #f97316, #ec4899);
  color: #fff;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #6b7280;
  font-size: 30rpx;
}
