/* pages/health-info/health-info.wxss */

.page-hint {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--color-text-light);
}

.pet-name {
  color: var(--color-primary);
  font-weight: 600;
  text-shadow: 0 0 10rpx rgba(34, 211, 238, 0.3);
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid;
  border-image: linear-gradient(to bottom, var(--color-primary), var(--color-accent)) 1;
  text-shadow: 0 0 10rpx rgba(34, 211, 238, 0.3);
}

.section-desc {
  font-size: 26rpx;
  color: var(--color-text-lighter);
  margin-bottom: 24rpx;
}

/* 疾病选择 */
.disease-category {
  margin-bottom: 24rpx;
}

.category-name {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-bottom: 12rpx;
  font-weight: 600;
}

.disease-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.disease-tag {
  padding: 14rpx 24rpx;
  background: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--color-text);
  transition: all 0.3s ease;
}

.disease-tag:active {
  transform: scale(0.95);
}

.disease-tag.active {
  background: linear-gradient(135deg, rgba(236, 72, 153, 0.3), rgba(236, 72, 153, 0.2));
  border-color: var(--color-accent);
  color: var(--color-accent);
  font-weight: 600;
  box-shadow: 0 0 15rpx rgba(236, 72, 153, 0.3);
}

/* 活动能力选项 */
.activity-options {
  display: flex;
  gap: 16rpx;
}

.activity-option {
  flex: 1;
  padding: 20rpx;
  background: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.activity-option:active {
  transform: scale(0.98);
}

.activity-option.active {
  background: linear-gradient(135deg, rgba(6, 182, 212, 0.3), rgba(34, 211, 238, 0.2));
  border-color: var(--color-primary);
  box-shadow: 0 0 20rpx rgba(34, 211, 238, 0.3);
}

.activity-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 6rpx;
}

.activity-option.active .activity-label {
  color: var(--color-primary);
  text-shadow: 0 0 8rpx rgba(34, 211, 238, 0.3);
}

.activity-desc {
  font-size: 22rpx;
  color: var(--color-text-lighter);
}

/* 子区块 */
.subsection {
  margin-bottom: 30rpx;
}

.subsection:last-child {
  margin-bottom: 0;
}

.subsection-title {
  font-size: 28rpx;
  color: var(--color-text);
  margin-bottom: 16rpx;
  font-weight: 600;
}

/* 过敏原标签 */
.allergen-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.allergen-tag {
  padding: 12rpx 24rpx;
  background: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--color-text);
  transition: all 0.3s ease;
}

.allergen-tag:active {
  transform: scale(0.95);
}

.allergen-tag.active {
  background: linear-gradient(135deg, rgba(251, 191, 36, 0.3), rgba(251, 191, 36, 0.2));
  border-color: #fbbf24;
  color: #fbbf24;
  font-weight: 600;
  box-shadow: 0 0 15rpx rgba(251, 191, 36, 0.3);
}

/* 体检报告 */
.report-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.report-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.report-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  border: 2rpx solid var(--color-primary);
  box-shadow: 0 0 15rpx rgba(34, 211, 238, 0.2);
}

.report-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.4);
  border: 2rpx solid #fff;
}

.report-add {
  width: 200rpx;
  height: 200rpx;
  background: rgba(31, 41, 55, 0.5);
  border: 2rpx dashed rgba(34, 211, 238, 0.4);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.report-add:active {
  border-color: var(--color-primary);
  background: rgba(34, 211, 238, 0.1);
  box-shadow: 0 0 15rpx rgba(34, 211, 238, 0.2);
}

.report-add .add-icon {
  font-size: 48rpx;
  color: var(--color-primary);
  margin-bottom: 8rpx;
}

.report-add .add-text {
  font-size: 24rpx;
  color: var(--color-text-light);
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 40rpx;
  padding: 0 0 40rpx;
}
