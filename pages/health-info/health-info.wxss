/* pages/health-info/health-info.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 50rpx;
}

.page-hint {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--color-text-light);
}

.pet-name-highlight {
  color: var(--color-primary);
  font-weight: 600;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid;
  border-image: linear-gradient(to bottom, var(--color-primary), var(--color-accent)) 1;
}

.section-desc {
  font-size: 26rpx;
  color: var(--color-text-lighter);
  margin-bottom: 24rpx;
}

/* 日期选择器 */
.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: var(--color-input-bg);
  border: none;
  border-radius: 28rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--color-text);
}

.form-picker .placeholder {
  color: var(--color-text-lighter);
}

.picker-arrow {
  font-size: 36rpx;
  color: var(--color-text-lighter);
}

/* 疾病选择 */
.disease-category {
  margin-bottom: 24rpx;
}

.category-name {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-bottom: 12rpx;
  font-weight: 600;
}

.disease-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.disease-tag {
  padding: 14rpx 24rpx;
  background: var(--color-input-bg);
  border: none;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--color-text);
  transition: all 0.3s ease;
}

.disease-tag:active {
  transform: scale(0.95);
}

.disease-tag.active {
  background: linear-gradient(135deg, rgba(233, 30, 140, 0.15), rgba(233, 30, 140, 0.08));
  border: 2rpx solid var(--color-accent);
  color: var(--color-accent);
  font-weight: 600;
  transform: scale(1.02);
}

.disease-tag.active::after {
  content: ' ✓';
  font-size: 22rpx;
}

/* 活动能力选项 */
.activity-options {
  display: flex;
  gap: 16rpx;
}

.activity-option {
  flex: 1;
  padding: 20rpx;
  background: var(--color-input-bg);
  border: none;
  border-radius: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.activity-option:active {
  transform: scale(0.98);
}

.activity-option.active {
  background: linear-gradient(135deg, rgba(255, 122, 0, 0.15), rgba(255, 122, 0, 0.08));
  border: 2rpx solid var(--color-primary);
  transform: translateY(-5rpx);
}

.activity-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 6rpx;
}

.activity-option.active .activity-label {
  color: var(--color-primary);
}

.activity-desc {
  font-size: 22rpx;
  color: var(--color-text-lighter);
}

/* 子区块 */
.subsection {
  margin-bottom: 30rpx;
}

.subsection:last-child {
  margin-bottom: 0;
}

.subsection-title {
  font-size: 28rpx;
  color: var(--color-text);
  margin-bottom: 16rpx;
  font-weight: 600;
}

/* 过敏原标签 */
.allergen-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.allergen-tag {
  padding: 12rpx 24rpx;
  background: var(--color-input-bg);
  border: none;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--color-text);
  transition: all 0.3s ease;
}

.allergen-tag:active {
  transform: scale(0.95);
}

.allergen-tag.active {
  background: linear-gradient(135deg, rgba(255, 122, 0, 0.15), rgba(255, 122, 0, 0.08));
  border: 2rpx solid var(--color-warning);
  color: var(--color-warning);
  font-weight: 600;
  transform: scale(1.02);
}

.allergen-tag.active::after {
  content: ' ✕';
  font-size: 22rpx;
}

/* 体检报告 */
.report-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.report-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.report-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.report-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.4);
  border: 2rpx solid #fff;
}

.report-add {
  width: 200rpx;
  height: 200rpx;
  background: var(--color-input-bg);
  border: 2rpx dashed var(--color-border);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.report-add:active {
  border-color: var(--color-primary);
  background: rgba(255, 122, 0, 0.05);
}

.report-add .add-icon {
  font-size: 48rpx;
  color: var(--color-primary);
  margin-bottom: 8rpx;
}

.report-add .add-text {
  font-size: 24rpx;
  color: var(--color-text-light);
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 40rpx;
  padding: 0 0 40rpx;
}

.save-btn {
  border-radius: 32rpx;
}
