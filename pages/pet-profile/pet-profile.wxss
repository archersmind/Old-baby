/* pages/pet-profile/pet-profile.wxss */

.container {
  padding-bottom: 50rpx;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
  border: 2rpx solid var(--color-primary);
  box-shadow: 0 0 30rpx rgba(34, 211, 238, 0.5);
}

.avatar-placeholder {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
  background: linear-gradient(135deg, rgba(168, 85, 247, 0.4), rgba(34, 211, 238, 0.4));
  border: 2rpx solid var(--color-primary);
  box-shadow: 0 0 30rpx rgba(168, 85, 247, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}

.avatar-edit-hint {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: var(--color-text-light);
  transition: all 0.3s ease;
}

.avatar-section:active .avatar-edit-hint {
  color: var(--color-primary);
}

.camera-icon {
  margin-right: 8rpx;
}

/* 表单区域 */
.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 24rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid;
  border-image: linear-gradient(to bottom, var(--color-primary), var(--color-accent)) 1;
  text-shadow: 0 0 10rpx rgba(34, 211, 238, 0.3);
}

.required {
  color: var(--color-accent);
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-group.half {
  flex: 1;
}

.form-group.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--color-text);
  transition: all 0.3s ease;
}

.form-picker:active {
  border-color: var(--color-primary);
  box-shadow: 0 0 15rpx rgba(34, 211, 238, 0.3);
}

.form-picker .placeholder {
  color: var(--color-text-lighter);
}

.picker-arrow {
  font-size: 36rpx;
  color: var(--color-primary);
  font-weight: 300;
}

.input-with-unit {
  position: relative;
}

.input-with-unit .form-input {
  padding-right: 80rpx;
}

.input-with-unit .unit {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-primary);
  font-size: 28rpx;
  font-weight: 500;
}

/* 性别选择 */
.gender-options {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: var(--color-text-light);
  transition: all 0.3s ease;
}

.gender-option:active {
  transform: scale(0.98);
}

.gender-option.active {
  background: linear-gradient(135deg, rgba(6, 182, 212, 0.3), rgba(236, 72, 153, 0.3));
  border-color: var(--color-primary);
  color: var(--color-primary);
  font-weight: 600;
  box-shadow: 0 0 20rpx rgba(34, 211, 238, 0.3);
}

/* 操作按钮 */
.action-buttons {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.btn-delete {
  background: transparent;
  color: var(--color-error);
  font-size: 28rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-delete::after {
  border: none;
}

.btn-delete:active {
  opacity: 0.7;
}

/* 品种选择弹窗 */
.breed-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.75);
  backdrop-filter: blur(8px);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.breed-picker-mask.show {
  opacity: 1;
  visibility: visible;
}

.breed-picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, #1f2937, #3d1a5f, #0a2f4f);
  border-top: 2rpx solid var(--color-primary);
  border-radius: 30rpx 30rpx 0 0;
  max-height: 70vh;
  box-shadow: 0 -10rpx 40rpx rgba(34, 211, 238, 0.2);
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.breed-picker-mask.show .breed-picker-content {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(34, 211, 238, 0.2);
}

.picker-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-primary);
  text-shadow: 0 0 10rpx rgba(34, 211, 238, 0.3);
}

.picker-close {
  font-size: 40rpx;
  color: var(--color-text-lighter);
  padding: 10rpx;
  line-height: 1;
}

.picker-search {
  padding: 20rpx 30rpx;
}

.search-input {
  height: 80rpx;
  background: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: var(--color-text);
}

.breed-list {
  height: 50vh;
  padding: 0 30rpx;
}

.breed-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 20rpx;
  border-bottom: 2rpx solid rgba(34, 211, 238, 0.1);
  font-size: 30rpx;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.breed-item:active {
  background-color: rgba(34, 211, 238, 0.1);
}

.breed-item.selected {
  color: var(--color-primary);
  font-weight: 600;
  background-color: rgba(34, 211, 238, 0.1);
}

.breed-size {
  font-size: 24rpx;
  color: var(--color-text-light);
  background-color: rgba(34, 211, 238, 0.15);
  border: 2rpx solid rgba(34, 211, 238, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.empty-tip {
  text-align: center;
  padding: 60rpx;
  color: var(--color-text-lighter);
}
