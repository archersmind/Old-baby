/* pages/pet-profile/pet-profile.wxss */

.container {
  padding-bottom: 50rpx;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
  background-color: var(--color-white);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar-placeholder {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}

.avatar-edit-hint {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: var(--color-text-lighter);
}

.camera-icon {
  margin-right: 8rpx;
}

/* 表单区域 */
.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid var(--color-primary);
}

.required {
  color: var(--color-error);
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-group.half {
  flex: 1;
}

.form-group.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: var(--color-input-bg);
  border: none;
  border-radius: 28rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
}

.form-picker .placeholder {
  color: var(--color-text-lighter);
}

.picker-arrow {
  font-size: 36rpx;
  color: var(--color-text-lighter);
}

.input-with-unit {
  position: relative;
}

.input-with-unit .form-input {
  padding-right: 80rpx;
}

.input-with-unit .unit {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-text-lighter);
  font-size: 28rpx;
}

/* 性别选择 */
.gender-options {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-input-bg);
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: var(--color-text-light);
}

.gender-option.active {
  background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
  border: none;
  color: var(--color-white);
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.btn-delete {
  background: transparent;
  color: var(--color-error);
  font-size: 28rpx;
  border: none;
}

.btn-delete::after {
  border: none;
}

/* 品种选择弹窗 */
.breed-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.breed-picker-mask.show {
  opacity: 1;
  visibility: visible;
}

.breed-picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--color-white);
  border-radius: 30rpx 30rpx 0 0;
  max-height: 70vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.breed-picker-mask.show .breed-picker-content {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--color-border);
}

.picker-title {
  font-size: 34rpx;
  font-weight: 600;
}

.picker-close {
  font-size: 36rpx;
  color: var(--color-text-lighter);
  padding: 10rpx;
}

.picker-search {
  padding: 20rpx 30rpx;
}

.search-input {
  height: 80rpx;
  background-color: var(--color-input-bg);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.breed-list {
  height: 50vh;
  padding: 0 30rpx;
}

.breed-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 20rpx;
  border-bottom: 2rpx solid var(--color-border);
  font-size: 30rpx;
}

.breed-item.selected {
  color: var(--color-primary);
  font-weight: 500;
}

.breed-size {
  font-size: 24rpx;
  color: var(--color-text-lighter);
  background-color: var(--color-input-bg);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.empty-tip {
  text-align: center;
  padding: 60rpx;
  color: var(--color-text-lighter);
}
