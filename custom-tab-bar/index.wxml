<view class="tab-bar">
  <view
    class="tab-bar-item {{selected === index ? 'active' : ''}}"
    wx:for="{{list}}"
    wx:key="index"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <view class="tab-icon-wrap">
      <image
        class="tab-icon {{selected === index ? 'active' : ''}}"
        src="{{selected === index ? item.activeIcon : item.icon}}"
        mode="aspectFit"
      />
    </view>
    <view class="tab-text {{selected === index ? 'active' : ''}}">{{item.text}}</view>
  </view>
</view>
