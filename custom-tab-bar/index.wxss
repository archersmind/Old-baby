.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(to top, rgba(10, 47, 79, 0.98), rgba(61, 26, 95, 0.9));
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 2rpx solid rgba(34, 211, 238, 0.3);
  backdrop-filter: blur(16px);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.tab-bar-item:active {
  transform: scale(0.95);
}

.tab-icon {
  font-size: 44rpx;
  margin-bottom: 4rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
  filter: grayscale(0.3);
}

.tab-icon.active {
  opacity: 1;
  transform: scale(1.15);
  filter: drop-shadow(0 0 12rpx rgba(34, 211, 238, 0.6)) grayscale(0);
}

.tab-text {
  font-size: 22rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
}

.tab-bar-item.active .tab-text {
  color: #22d3ee;
  text-shadow: 0 0 8rpx rgba(34, 211, 238, 0.5);
}
