.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 2rpx solid #e5e7eb;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  transition: all 0.3s ease;
}

.tab-icon-wrap {
  margin-bottom: 4rpx;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.3s ease;
}

.tab-icon.active {
  transform: scale(1.1);
}

.tab-text {
  font-size: 24rpx;
  color: #6b7280;
  transition: color 0.3s ease;
}

.tab-text.active {
  color: #f97316;
}
