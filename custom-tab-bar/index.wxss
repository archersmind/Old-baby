.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #FFFFFF;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 2rpx solid #F0F0F0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.tab-bar-item:active {
  transform: scale(0.95);
}

.tab-icon {
  font-size: 44rpx;
  margin-bottom: 4rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.tab-icon.active {
  opacity: 1;
  transform: scale(1.1);
}

.tab-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #999999;
  transition: all 0.3s ease;
}

.tab-bar-item.active .tab-text {
  color: #FF7A00;
}
